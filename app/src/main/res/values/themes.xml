<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#96489C</item>
        <item name="colorPrimaryVariant">#722D73</item>
        <item name="colorOnPrimary">#F2F2F2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#96489C</item>
        <item name="colorSecondaryVariant">#722D73</item>
